{
  "name": "meta-contract",
  "version": "7.4.0",
  "description": "Meta Contract SDK",
  "main": "dist/index.js",
  "browser": "dist/sensible.browser.min.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "compile-bcp01": "node tools/compiler.js --bcp01",
    "compile-bcp01-dev": "node tools/compiler.js --bcp01 --debug",
    "compile-bcp02": "node tools/compiler.js --bcp02",
    "compile-bcp02-dev": "node tools/compiler.js --bcp02  --debug",
    "build": "npx gulp",
    "build:watch": "gulp dev",
    "atest": "mocha -r ts-node/register tests/acceptance/**/*.test.ts --timeout 600000",
    "atest-ft": "mocha -r ts-node/register tests/acceptance/bcp02/ft.test.ts --timeout 5000000 --debugUri ",
    "atest-nft": "mocha -r ts-node/register tests/acceptance/bcp01/nft.test.ts --timeout 5000000 --debugUri ",
    "atest-wallet": "mocha -r ts-node/register tests/acceptance/others/wallet.test.ts --timeout 5000000 --debugUri ",
    "jw": "jest --watchAll"
  },
  "keywords": [
    "sCrypt",
    "testing",
    "Smart Contract",
    "bitcoin",
    "bitcoin-sv",
    "sensible"
  ],
  "author": "Showpay",
  "license": "MIT",
  "dependencies": {
    "mvc-scryptlib": "^1.0.0",
    "node-fetch": "2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.20",
    "@types/jest": "^28.1.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "^17.0.0",
    "@types/node-fetch": "2",
    "browserify": "^17.0.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.4",
    "dotenv": "^16.0.1",
    "glob": "^7.1.7",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typedoc": "^3.0.1",
    "gulp-typescript": "*",
    "gulp-uglify": "^3.0.2",
    "gulp-util": "^3.0.8",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^28.1.3",
    "merge2": "^1.4.1",
    "minimist": "1.2.5",
    "mocha": "^9.0.2",
    "prettier": "2.7.1",
    "standalonify": "^0.1.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsify": "^5.0.4",
    "typescript": "^4.5.4",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watch": "^1.0.2",
    "watchify": "^4.0.0"
  }
}
